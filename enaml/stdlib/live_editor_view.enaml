enamldef EditorPanel(Container):
    attr model: LiveEditorModel
    constraints = [
        vbox(hbox(label, field, slabel, spin), editor),
        align('v_center', label, field, slabel, spin),
    ]
    Label: label:
        text = 'View Item'
    Field: field:
        text << model.view_item 
        text :: model.view_item = str(text)
    Label: slabel:
        text = 'Zoom'
    SpinBox: spin:
        minimum = -10
        maximum = 20
        value := editor.zoom
    Scintilla: editor:
        activated :: set_text(model.module_text) 
        lexer = 'enaml'
        theme = IDLE_THEME
        text_changed :: timer.start()
        Timer: timer:
            interval = 350
            single_shot = True
            timeout :: model.module_text = str(editor.get_text())


enamldef TracebackPanel(Container):
    attr model: LiveEditorModel
    padding = 0
    MultilineField:
        text << model.traceback
        read_only = True


def prepare_item(item):
    if item is None:
        return []
    if isinstance(item, Container):
        item.share_layout = True
    return [item]


enamldef LiveViewPanel(Container):
    attr model: LiveEditorModel
    padding = 0
    MdiArea:
        resist_width = 'ignore'
        resist_height = 'ignore'
        constraints = [width >= 640, height >= 480]
        MdiWindow:
            title << model.view_item
            Container:
                padding = 0
                Include:
                    objects << prepare_item(model.output_view)
