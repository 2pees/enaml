{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Plugin Manifest Schema",
	"description": "The schema for an Enaml workbench plugin manifest.",
	"type": "object",
	"required": [ "id" ],
	"additionalProperties": false,
	"properties": {
		"id": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"class": {
			"type": "string"
		},
		"extensionPoints": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/extensionPoint"
			}
		},
		"extensions": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/extension"
			}
		}
	},
	"definitions": {
		"extensionPoint": {
			"type": "object",
			"required": [ "id" ],
			"additionalProperties": false,
			"properties": {
				"id": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"interface": {
					"type": "string"
				},
				"schema": {
					"type": "string"
				}
			}
		},
		"extension": {
			"type": "object",
			"required": [ "id", "point" ],
			"additionalProperties": false,
			"properties": {
				"id": {
					"type": "string"
				},
				"point": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"class": {
					"type": "string"
				},
				"rank": {
					"type": "number"
				},
				"config": {
					"type": "object"
				}
			}
		}
	}
}
